<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/demoListFragment">

    <fragment
        android:id="@+id/demoListFragment"
        android:name="com.example.tfdemo.fragments.DemoListFragment"
        android:label="@string/demo_list_title"
        tools:layout="@layout/fragment_demo_list">
        <action
            android:id="@+id/actionDemoListToPermissions"
            app:destination="@id/permissionsFragment" />
        <action
            android:id="@+id/actionDemoListToGyro"
            app:destination="@id/sensorFragment" />
    </fragment>

    <fragment
        android:id="@+id/permissionsFragment"
        android:name="com.example.tfdemo.fragments.PermissionsFragment"
        android:label="Permissions"
        tools:layout="@layout/fragment_permissions">
        <action
            android:id="@+id/actionPermissionsToCamera"
            app:destination="@id/cameraFragment" />
    </fragment>

    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.tfdemo.fragments.CameraFragment"
        android:label="Camera"
        tools:layout="@layout/fragment_camera">
        <action
            android:id="@+id/action_cameraFragment_to_demoListFragment"
            app:destination="@id/demoListFragment" />
        <action
            android:id="@+id/actionCameraToPermissions"
            app:destination="@id/permissionsFragment" />
    </fragment>

    <fragment
        android:id="@+id/sensorFragment"
        android:name="com.example.tfdemo.fragments.SensorFragment"
        android:label="@string/gyro_demo_title"
        tools:layout="@layout/fragment_sensor" />

</navigation>